<!-- BEGIN HEADER -->

<header class="site-header demo-header">
    <div class="site-header-bar">
        <div class="container">
            <div class="row">
                <div class="col col-lg-6">
                    <div class="contacts-info">
                        <p><i class="fa fa-phone"></i>{{config.contactPhone}}</p>
                        <p><i class="fa fa-envelope-open-o"></i> {{config.contactEmail}}</p>
                    </div>
                </div>
                <div class="col col-lg-6">
                    <div class="social">
                        <h3>Follow us:</h3>
                        <ul class="social-nav">
                          <li><a href="{{config.socialMedia.instagram}}"><i class="fa fa-instagram"></i></a></li>
                          <li><a href="{{config.socialMedia.facebook}}"><i class="fa fa-facebook"></i></a></li>
                          <li><a href="{{config.socialMedia.twitter}}"><i class="fa fa-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-header-inner">
        <div class="container">
            <div class="logo">
                <img class="brand-img" src="/public/images/logo2.png" width="80" alt="A cubed">
            </div>
            <nav class="main-nav">
                <ul>
                    <li class="main-nav-item {{#if header.home}}active{{/if}}">
                        <a class="main-nav-link" href="/demo">Home</a>
                    </li>
                    <li class="main-nav-item main-nav-item-parent {{#if header.campaigns}}campaigns{{/if}}">
                        <a class="main-nav-link" href="/campaigns">Campaigns</a>
                        <ul>
                            <li>
                                <a href="/campaigns">Active</a>
                            </li>
                            <li>
                                <a href="/complete">Complete</a>
                            </li>
                        </ul>
                    </li>
                    <li class="main-nav-item {{#if header.charity}}active{{/if}}">
                        <a class="main-nav-link" href="/charities">Charities</a>
                    </li>
                    <li class="main-nav-item main-nav-item-parent {{#if header.donations}}active{{/if}} blockchain">
                        <a class="main-nav-link" href="/statistics">Blockchain</a>
                        <ul>
                            <li>
                                <a href="/mydonations">Your Donations</a>
                            </li>
                            <li>
                                <a href="/statistics">Fundraiser Statistics</a>
                            </li>
                        </ul>
                    </li>
                    <li class="main-nav-item {{#if header.guide}}active{{/if}}">
                        <a class="main-nav-link" href="/guide">Guide</a>
                    </li>
                    <li class="main-nav-item {{#if header.about}}active{{/if}}">
                        <a class="main-nav-link" href="/about">About Us</a>
                    </li>
                </ul>
                <button type="button" class="main-nav-toggle-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </nav>
        </div>
    </div>
</header>
<!-- END HEADER -->
