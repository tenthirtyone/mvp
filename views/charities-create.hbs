<section id="main-content" class="charities-create">
            <div class="wrapper main-wrapper row" style=''>

                <div class='col-xs-12'>
                    <div class="page-title">
                        <div class="pull-left">
                            <!-- PAGE HEADING TAG - START -->
                            <h1 class="title">Charities</h1>
                            <!-- PAGE HEADING TAG - END -->
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <!-- MAIN CONTENT AREA STARTS -->

<div class="col-12">
    <section class="box" style="border-left: 3px solid #e77512;">
        <header class="panel_header">
            <h2 class="title pull-left">Add Charity</h2>
        </header>
        <section class="box ">
            <div class="content-body">
                <div class="row">
                    <div class="col-md-8 col-sm-9 col-xs-10">
                        <form id="CreateCharity">
                            <div class="form-group">
                                <label class="form-label" for="field-1">Charity Name</label>
                                <div class="controls">
                                    <input type="text" class="form-control" name="charityName" placeholder="" id="field-1">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Identifier</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" name="identifier" placeholder="" cols="5">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Tax ID</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" name="taxid" placeholder="" value="{{charity.taxid}}" cols="5">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Paypal Address</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" name="paypal" placeholder="" cols="5">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Short Description</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <textarea class="form-control" name="shortDescription" placeholder="" cols="5"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Crypto Campaign Id</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="number" value="0" step="1" class="form-control" name="cryptoCampaignId" placeholder="" cols="5">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Text1</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <textarea class="form-control" name="text1" placeholder="" cols="5"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Text2</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <textarea class="form-control" name="text2" placeholder="" cols="5"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Text3</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <textarea class="form-control" name="text3" placeholder="" cols="5"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Text4</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <textarea class="form-control" name="text4" placeholder="" cols="5"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="controls">
                                    <button class="btn btn-primary btn-charity has-gradient-to-right-bottom" type="button">Add Charity</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </section>
    </section>
</div>

                <!-- MAIN CONTENT AREA ENDS -->
            </div>
        </section>
